pipeline {
    agent any
    environment {
        IMAGE_NAME = "selenium-test"
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }
    }
    post {
        always {
            // Cleanup: remove any unused images, volumes, etc.
            sh 'docker system prune -af'
        }
    }
}
